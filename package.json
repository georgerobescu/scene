{
  "name": "Desktop",
  "version": "0.0.1",
  "author": "Tirrel Corporation",
  "description": "Your reliable, pliable, desirable Urbit desktop",
  "license": "UNLICENSED",
  "private": true,
  "homepage": "./",
  "main": "./public/electron.js",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@urbit/api": "^2.1.1",
    "@urbit/http-api": "^2.2.0",
    "autoprefixer": "^10.4.8",
    "postcss": "^8.4.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.1.8",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "dev": "npm run electron:start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:start": "concurrently -k \"cross-env BROWSER=none npm run start start\" \"wait-on http://localhost:3000 && electronmon . \"",
    "electron:package:mac": "cross-env NODE_ENV=production npm run build && electron-builder -m -c.extraMetadata.main=build/electron.js",
    "electron:package:win": "cross-env NODE_ENV=production npm run build && electron-builder -w -c.extraMetadata.main=build/electron.js",
    "electron:package:linux": "cross-env NODE_ENV=production npm run build && electron-builder -l -c.extraMetadata.main=build/electron.js"
  },
  "build": {
    "appId": "com.tirrel.desktop",
    "productName": "Desktop",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "electron": "^20.1.2",
    "electron-builder": "^23.3.3",
    "electronmon": "^2.0.2",
    "wait-on": "^6.0.1"
  }
}
